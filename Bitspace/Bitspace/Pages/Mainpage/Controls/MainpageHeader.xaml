<?xml version="1.0" encoding="utf-8" ?>
<Grid
    Margin="0,24"
    Padding="18"
    RowDefinitions="auto, auto, auto"
    RowSpacing="12"
    x:Class="Bitspace.Pages.Mainpage.Controls.MainpageHeader"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:controls="clr-namespace:Bitspace.Controls;assembly=Bitspace"
    xmlns:registers="clr-namespace:Bitspace.Registers;assembly=Bitspace"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Label
        FontSize="Header"
        Grid.Row="0"
        HorizontalOptions="CenterAndExpand"
        Text="{x:Static registers:MainpageRegister.WELCOME_TO}" />
    <Frame
        BackgroundColor="White"
        CornerRadius="100"
        Grid.Row="1"
        HorizontalOptions="Center"
        Opacity="0.3">
        <controls:AppIcon HeightRequest="60" x:Name="AppIcon" />
    </Frame>
    <Label
        FontAttributes="Bold"
        FontSize="Large"
        Grid.Row="2"
        HorizontalOptions="CenterAndExpand"
        Text="{x:Static registers:MainpageRegister.BITSPACE}"
        x:Name="AppName" />
</Grid>