<?xml version="1.0" encoding="utf-8" ?>
<pancakeView:PancakeView
    BackgroundColor="{StaticResource ColorSecondary}"
    CornerRadius="8"
    Shadow="{pancakeView:ShadowMarkup Color=LightGray,
                                      BlurRadius=4}"
    x:Class="Bitspace.Pages.Mainpage.Controls.MenuItemTile"
    x:Name="This"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid RowDefinitions="auto, *">
        <Label
            FontSize="100"
            Grid.Row="0"
            HorizontalOptions="Center"
            Text="X" />
        <!-- <Image Grid.Row="0" Source="{Binding Image, Source={x:Reference This}}" /> -->
        <Label
            FontSize="30"
            Grid.Row="1"
            HorizontalOptions="Center"
            Text="{Binding Title, Source={x:Reference This}}" />
    </Grid>
</pancakeView:PancakeView>
