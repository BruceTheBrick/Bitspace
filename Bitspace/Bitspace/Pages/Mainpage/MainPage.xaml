<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Bitspace.Pages.Mainpage.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:appicon="clr-namespace:Bitspace.Controls;assembly=Bitspace"
    xmlns:behaviors="http://prismlibrary.com"
    xmlns:controls="clr-namespace:Bitspace.Pages.Mainpage.Controls;assembly=Bitspace"
    xmlns:converters="http://xamarin.com/schemas/2020/toolkit"
    xmlns:mainpage="clr-namespace:Bitspace.Pages.Mainpage;assembly=Bitspace"
    xmlns:models="clr-namespace:Bitspace.Pages.Mainpage.Models;assembly=Bitspace"
    xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:registers="clr-namespace:Bitspace.Registers;assembly=Bitspace"
    x:DataType="mainpage:MainPageViewModel"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <converters:ListIsNullOrEmptyConverter x:Key="ListIsNullOrEmptyConverter" />
    </ContentPage.Resources>
    <StackLayout Spacing="0">
        <Grid
            Margin="0,24"
            Padding="18"
            RowDefinitions="auto, auto, auto"
            RowSpacing="12">
            <Label
                Grid.Row="0"
                FontSize="Header"
                HorizontalOptions="CenterAndExpand"
                Text="{x:Static registers:MainpageRegister.WELCOME_TO}" />
            <Frame
                Grid.Row="1"
                BackgroundColor="White"
                CornerRadius="100"
                HorizontalOptions="Center"
                Opacity="0.3">
                <appicon:AppIcon x:Name="AppIcon" HeightRequest="60" />
            </Frame>
            <Label
                x:Name="AppName"
                Grid.Row="2"
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="CenterAndExpand"
                Text="{x:Static registers:MainpageRegister.BITSPACE}" />
        </Grid>
        <pancakeView:PancakeView
            Padding="0,20"
            BackgroundColor="White"
            CornerRadius="20"
            Shadow="{pancakeView:ShadowMarkup Color=WhiteSmoke,
                                              Offset='10,10'}">
            <Grid>
                <ListView
                    HasUnevenRows="True"
                    HorizontalOptions="Center"
                    IsPullToRefreshEnabled="True"
                    IsRefreshing="{Binding IsRefreshing}"
                    ItemsSource="{Binding MenuItems}"
                    RefreshCommand="{Binding RefreshMenuItemsCommand}"
                    SelectionMode="None"
                    SeparatorColor="DarkGray"
                    SeparatorVisibility="Default">
                    <ListView.Behaviors>
                        <behaviors:EventToCommandBehavior
                            Command="{Binding ItemSelectedCommand}"
                            EventArgsParameterPath="Item"
                            EventName="ItemTapped" />
                    </ListView.Behaviors>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:MenuListItemViewModel">
                            <ViewCell>
                                <controls:MenuListItem ActionIconTint="Gray" MenuListItemViewModel="{Binding}" />
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <pancakeView:PancakeView
                    Margin="20"
                    Padding="20"
                    BackgroundColor="LightGray"
                    CornerRadius="20"
                    HorizontalOptions="CenterAndExpand"
                    IsVisible="{Binding MenuItems, Converter={StaticResource ListIsNullOrEmptyConverter}}"
                    VerticalOptions="CenterAndExpand">
                    <Label
                        FontSize="24"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Text="Uh oh! Looks like there's nothing here!" />
                </pancakeView:PancakeView>
            </Grid>
        </pancakeView:PancakeView>
    </StackLayout>
</ContentPage>