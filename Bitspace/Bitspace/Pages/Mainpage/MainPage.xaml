<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    Title="{Binding Title}"
    x:Class="Bitspace.Pages.Mainpage.MainPage"
    x:DataType="mainpage:MainPageViewModel"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
    xmlns:mainpage="clr-namespace:Bitspace.Pages.Mainpage;assembly=Bitspace"
    xmlns:mit="clr-namespace:Bitspace.Pages.Mainpage.Controls;assembly=Bitspace"
    xmlns:models="clr-namespace:Bitspace.Pages.Mainpage.Models;assembly=Bitspace"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <flv:FlowListView
        FlowColumnCount="1"
        FlowItemTappedCommand="{Binding MenuTileSelectedCommand}"
        FlowItemsSource="{Binding MenuItems}"
        HasUnevenRows="True"
        Margin="12,6">
        <flv:FlowListView.FlowColumnTemplate>
            <DataTemplate x:DataType="models:MenuItemModel">
                <mit:MenuItemTile Title="{Binding Title}" />
            </DataTemplate>
        </flv:FlowListView.FlowColumnTemplate>
    </flv:FlowListView>

</ContentPage>