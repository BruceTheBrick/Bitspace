<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             x:DataType="pages:WeatherForecastPageViewModel"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Bitspace.Pages;assembly=Bitspace"
             xmlns:apIs="clr-namespace:Bitspace.APIs;assembly=Bitspace"
             xmlns:controls="clr-namespace:Bitspace.Controls;assembly=Bitspace"
             x:Class="Bitspace.Pages.WeatherForecastPage">
    <Grid RowDefinitions="*, *, *, *, *">
        
        <!-- Day Selection -->
        <Grid RowDefinitions="*, *" ColumnDefinitions="auto, auto, auto">
            <Label Text="Today" Grid.Column="0" Grid.Row="0"/>
            <Label Text="7 days" Grid.Column="2" Grid.Row="0"/>
            <CarouselView
                Loop="False"
                HorizontalScrollBarVisibility="Always"
                ItemsSource="{Binding HourlyForecast.ForecastItems}"
                Grid.Row="1" Grid.ColumnSpan="3">
                <CarouselView.ItemTemplate>
                    <DataTemplate x:DataType="apIs:ForecastItemViewModel">
                        <controls:Pill CornerRadius="32" Padding="0" Text="{Binding DisplayText}"/>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </Grid>
    </Grid>
</ContentPage>