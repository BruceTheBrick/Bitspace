<?xml version="1.0" encoding="utf-8" ?>
<pancakeView:PancakeView
    x:Class="Bitspace.Pages.ForecastItem"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Bitspace.APIs;assembly=Bitspace"
    xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:DataType="models:ForecastItemViewModel"
    Border="{pancakeView:BorderMarkup Color=White,
                                      Thickness=2}"
    CornerRadius="16">
    <Grid
        BackgroundColor="White"
        ColumnDefinitions="*, *, *"
        RowDefinitions="*, *, *, *">
        <Label
            Grid.Row="0"
            Grid.ColumnSpan="3"
            HorizontalOptions="CenterAndExpand"
            Text="{Binding Temperature, StringFormat='{0:F0}°'}" />
        <Label
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Text="{Binding DateTime}" />
    </Grid>
</pancakeView:PancakeView>