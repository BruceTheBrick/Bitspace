<?xml version="1.0" encoding="utf-8" ?>
<features:BasePage
    x:Class="Bitspace.Features.WeatherForecastPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:features="clr-namespace:Bitspace.Features;assembly=Bitspace"
    xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:ui="clr-namespace:Bitspace.UI;assembly=Bitspace"
    x:DataType="features:WeatherForecastPageViewModel"
    BackgroundColor="{StaticResource Ninja}"
    NavigationPage.HasNavigationBar="False">
    <features:BasePage.Resources>
        <features:WeatherForecastStyle />
    </features:BasePage.Resources>
    <Grid RowDefinitions="*, *, *">

        <!--  Day Selection  -->
        <Grid
            Padding="16,16,0,16"
            ColumnDefinitions="*, *, *"
            RowDefinitions="3*, 2*">
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding SelectedDayViewModel.Description}" />
            <Label
                Grid.Row="0"
                Grid.Column="2"
                FontSize="Title"
                Text="{Binding HourlyForecast.Location.Name}" />
            <ui:PillList
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Padding="10,6"
                IsLoading="{Binding IsBusy}"
                ItemSelectedCommand="{Binding PillSelectedCommand}"
                ItemsSource="{Binding DailyPillList}" />
        </Grid>

        <!--  Main Content  -->
        <Grid
            Grid.Row="1"
            Margin="24"
            Padding="0"
            RowDefinitions="5*, 4*">
            <BoxView
                Grid.RowSpan="2"
                BackgroundColor="{StaticResource Xiketic}"
                CornerRadius="12"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand" />
            <Grid ColumnDefinitions="*, *">
                <ui:ExtendedImage
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Source="ic_weather"
                    TintColor="{StaticResource IconWhiteColor}"
                    TranslationY="-20" />
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="60"
                    HorizontalTextAlignment="Center"
                    Text="{Binding SelectedDayViewModel.Temperature, StringFormat='{0}°'}"
                    TextColor="#B2CFE6"
                    VerticalOptions="Center" />
            </Grid>
            <Grid
                Grid.Row="1"
                Margin="16,0,16,16"
                ColumnDefinitions="3*, 2*, 3*"
                ColumnSpacing="16"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <Frame
                    Grid.Column="0"
                    Padding="0"
                    BackgroundColor="{StaticResource SpaceCadet}"
                    CornerRadius="8">
                    <Grid
                        Padding="8"
                        RowDefinitions="*, *, *"
                        VerticalOptions="CenterAndExpand">
                        <ui:ExtendedImage Source="ic_wind" TintColor="{StaticResource IconColor}" />
                        <Label
                            Grid.Row="1"
                            FontSize="Micro"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="Wind" />
                        <Label
                            Grid.Row="2"
                            FontAttributes="Bold"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="{Binding SelectedDayViewModel.WindSpeed, StringFormat='{0} km/h'}"
                            TextColor="#B2CFE6" />
                    </Grid>
                </Frame>
                <Frame
                    Grid.Column="1"
                    Padding="0"
                    BackgroundColor="{StaticResource SpaceCadet}"
                    CornerRadius="8">
                    <Grid
                        Padding="8"
                        RowDefinitions="*, *, *"
                        VerticalOptions="CenterAndExpand">
                        <ui:ExtendedImage Source="ic_droplette" TintColor="{StaticResource IconColor}" />
                        <Label
                            Grid.Row="1"
                            FontSize="Micro"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="Humidity" />
                        <Label
                            Grid.Row="2"
                            FontAttributes="Bold"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="{Binding SelectedDayViewModel.Humidity, StringFormat='{0}%'}"
                            TextColor="#B2CFE6" />
                    </Grid>
                </Frame>
                <Frame
                    Grid.Column="2"
                    Padding="0"
                    BackgroundColor="{StaticResource SpaceCadet}"
                    CornerRadius="8">
                    <Grid
                        Padding="8"
                        RowDefinitions="*, *, *"
                        VerticalOptions="CenterAndExpand">
                        <ui:ExtendedImage Source="ic_rain" TintColor="{StaticResource IconColor}" />
                        <Label
                            Grid.Row="1"
                            FontSize="Micro"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="Chance of rain" />
                        <Label
                            Grid.Row="2"
                            FontAttributes="Bold"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="{Binding SelectedDayViewModel.RainChance, StringFormat='{0}%'}"
                            TextColor="#B2CFE6" />
                    </Grid>
                </Frame>
            </Grid>
        </Grid>

        <!--  Hourly Selection  -->
        <Grid
            Grid.Row="2"
            Margin="24"
            RowDefinitions="3*, *, 2*">
            <ScrollView Grid.Row="0" Orientation="Horizontal">
                <StackLayout
                    BindableLayout.ItemsSource="{Binding SelectedDayViewModel.ForecastItems}"
                    Orientation="Horizontal"
                    Spacing="16">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <features:ForecastItem />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </ScrollView>
            <pancakeView:PancakeView
                Grid.Row="2"
                BackgroundColor="{StaticResource Xiketic}"
                CornerRadius="16">
                <Grid
                    Padding="20"
                    ColumnDefinitions="*, *, *, *"
                    HorizontalOptions="FillAndExpand">
                    <ui:ExtendedImage
                        Grid.Column="1"
                        Source="ic_home"
                        TintColor="{StaticResource PillActiveBackground}"
                        VerticalOptions="Center" />
                    <ui:ExtendedImage
                        Grid.Column="2"
                        Source="ic_magnifying_glass"
                        TintColor="{StaticResource IconSecondaryColor}"
                        VerticalOptions="Center" />
                </Grid>
            </pancakeView:PancakeView>
        </Grid>
    </Grid>
</features:BasePage>