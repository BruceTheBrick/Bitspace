<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Bitspace.Features.ConnectFourPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:features="clr-namespace:Bitspace.Features;assembly=Bitspace"
    x:DataType="features:ConnectFourPageViewModel">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label
                FontSize="Title"
                HorizontalOptions="CenterAndExpand"
                Text="{Binding BoardString}" />
            <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                <Label Text="Is Column Full?" />
                <Label Text="{Binding ColumnIsFull}" />
                <Button Command="{Binding PlacePieceCommand}" Text="Place Piece in Column 2" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>