<?xml version="1.0" encoding="utf-8" ?>
<features:BasePage
    BackgroundColor="{StaticResource Ninja}"
    x:Class="Bitspace.Features.WeatherForecastPage"
    x:DataType="features:WeatherForecastPageViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:features="clr-namespace:Bitspace.Features;assembly=Bitspace"
    xmlns:ui="clr-namespace:Bitspace.UI;assembly=Bitspace"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <features:BasePage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <features:WeatherForecastStyle />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </features:BasePage.Resources>
    <Grid RowDefinitions="auto, *">
        <ui:NavigationBar
            Grid.Row="0"
            LeftActionCommand="{Binding NavigateBackCommand}"
            LeftActionType="Back"
            Title="{Binding Title}" />
        <Grid Grid.Row="1" RowDefinitions="*, *, *">

            <!--  Day Selection  -->
            <Grid
                ColumnDefinitions="*, *, *"
                Padding="16,16,0,16"
                RowDefinitions="3*, 2*">
                <Label
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="{Binding SelectedDayViewModel.Description}" />
                <Label
                    FontSize="Title"
                    Grid.Column="2"
                    Grid.Row="0"
                    Text="{Binding HourlyForecast.Location.Name}" />
                <ui:SkeletonSection
                    Grid.Column="0"
                    Grid.Row="1"
                    IsLoading="True" />
                <ui:SkeletonSection
                    Grid.Column="1"
                    Grid.Row="1"
                    IsLoading="True" />
                <ui:SkeletonSection
                    Grid.Column="2"
                    Grid.Row="1"
                    IsLoading="True" />
                <!--  <ui:PillList  -->
                <!--  Grid.ColumnSpan="3"  -->
                <!--  Grid.Row="1"  -->
                <!--  IsLoading="{Binding IsBusy}"  -->
                <!--  ItemSelectedCommand="{Binding PillSelectedCommand}"  -->
                <!--  ItemsSource="{Binding DailyPillList}"  -->
                <!--  Padding="10,6" />  -->
            </Grid>

            <!--  Main Content  -->
            <Grid
                Grid.Row="1"
                Margin="24"
                Padding="0"
                RowDefinitions="5*, 4*">
                <Border
                    BackgroundColor="{StaticResource Xiketic}"
                    Grid.RowSpan="2"
                    StrokeShape="RoundRectangle 12" />
                <Grid ColumnDefinitions="*, *">
                    <ui:ExtendedImage
                        Grid.Column="0"
                        HorizontalOptions="Center"
                        Source="ic_weather"
                        TintColor="{StaticResource IconWhiteColor}"
                        TranslationY="-20"
                        WidthRequest="120" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="60"
                        Grid.Column="1"
                        HorizontalTextAlignment="Center"
                        Text="{Binding SelectedDayViewModel.Temperature, StringFormat='{0}Â°'}"
                        TextColor="#B2CFE6"
                        VerticalOptions="Center" />
                </Grid>
                <Grid
                    ColumnDefinitions="3*, 2*, 3*"
                    ColumnSpacing="16"
                    Grid.Row="1"
                    Margin="16,0,16,16">
                    <Border
                        BackgroundColor="{StaticResource SpaceCadet}"
                        Grid.Column="0"
                        Padding="0"
                        StrokeShape="RoundRectangle 8">
                        <Grid Padding="8" RowDefinitions="*, *, *">
                            <ui:ExtendedImage Source="ic_wind" TintColor="{StaticResource IconColor}" />
                            <Label
                                FontSize="Micro"
                                Grid.Row="1"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="Wind" />
                            <Label
                                FontAttributes="Bold"
                                Grid.Row="2"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="{Binding SelectedDayViewModel.WindSpeed, StringFormat='{0} km/h'}"
                                TextColor="#B2CFE6" />
                        </Grid>
                    </Border>
                    <Border
                        BackgroundColor="{StaticResource SpaceCadet}"
                        Grid.Column="1"
                        Padding="0"
                        StrokeShape="RoundRectangle 8">
                        <Grid Padding="8" RowDefinitions="*, *, *">
                            <ui:ExtendedImage Source="ic_droplette" TintColor="{StaticResource IconColor}" />
                            <Label
                                FontSize="Micro"
                                Grid.Row="1"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="Humidity" />
                            <Label
                                FontAttributes="Bold"
                                Grid.Row="2"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="{Binding SelectedDayViewModel.Humidity, StringFormat='{0}%'}"
                                TextColor="#B2CFE6" />
                        </Grid>
                    </Border>
                    <Border
                        BackgroundColor="{StaticResource SpaceCadet}"
                        Grid.Column="2"
                        Padding="0"
                        StrokeShape="RoundRectangle 8">
                        <Grid Padding="8" RowDefinitions="*, *, *">
                            <ui:ExtendedImage Source="ic_rain" TintColor="{StaticResource IconColor}" />
                            <Label
                                FontSize="Micro"
                                Grid.Row="1"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="Chance of rain" />
                            <Label
                                FontAttributes="Bold"
                                Grid.Row="2"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="{Binding SelectedDayViewModel.RainChance, StringFormat='{0}%'}"
                                TextColor="#B2CFE6" />
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!--  Hourly Selection  -->
            <Grid
                Grid.Row="2"
                Margin="24"
                RowDefinitions="3*, *, 2*">
                <ScrollView Grid.Row="0" Orientation="Horizontal">
                    <StackLayout
                        BindableLayout.ItemsSource="{Binding SelectedDayViewModel.ForecastItems}"
                        Orientation="Horizontal"
                        Spacing="16">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <features:ForecastItem />
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
                </ScrollView>
                <Border
                    BackgroundColor="{StaticResource Xiketic}"
                    Grid.Row="2"
                    StrokeShape="RoundRectangle 16">
                    <Grid ColumnDefinitions="*, *, *, *" Padding="20">
                        <ui:ExtendedImage
                            Grid.Column="1"
                            Source="ic_home"
                            TintColor="{StaticResource PillActiveBackground}"
                            VerticalOptions="Center" />
                        <ui:ExtendedImage
                            Grid.Column="2"
                            Source="ic_magnifying_glass"
                            TintColor="{StaticResource IconSecondaryColor}"
                            VerticalOptions="Center" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</features:BasePage>