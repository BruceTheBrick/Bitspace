<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
    HorizontalScrollBarVisibility="Always"
    Orientation="Horizontal"
    x:Class="Bitspace.UI.PillList"
    x:Name="This"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:effects="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:ui="clr-namespace:Bitspace.UI;assembly=Bitspace"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout>
        <StackLayout
            BindableLayout.ItemsSource="{Binding ItemsSource, Source={x:Reference This}}"
            IsVisible="{Binding IsLoading, Converter={effects:InvertedBoolConverter}, Source={x:Reference This}}"
            Orientation="Horizontal"
            Padding="0,8,0,8">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="ui:PillViewModel">
                    <ui:Pill>
                        <ui:Pill.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Command, Source={x:Reference This}}" />
                        </ui:Pill.GestureRecognizers>
                    </ui:Pill>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
        <StackLayout
            IsVisible="{Binding IsLoading, Source={x:Reference This}}"
            Orientation="Horizontal"
            Padding="0,8,0,8">
            <ui:LoadingPill />
            <ui:LoadingPill />
            <ui:LoadingPill />
            <ui:LoadingPill />
            <ui:LoadingPill />
        </StackLayout>
    </StackLayout>
</ScrollView>